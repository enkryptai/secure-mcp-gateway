# Enkrypt In-Agent SDK - Environment Variables
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# OpenAI API Key (required for LangChain, LangGraph, OpenAI Agents, CrewAI,
# PydanticAI, LlamaIndex, AutoGen, SmolAgents, PhiData, Semantic Kernel, Haystack)
OPENAI_API_KEY=sk-...

# Anthropic API Key (required for Anthropic example)
ANTHROPIC_API_KEY=sk-ant-...

# Google API Key (required for Google ADK example)
# GOOGLE_API_KEY=...

# =============================================================================
# Enkrypt AI Configuration
# =============================================================================

# Enkrypt AI API Key (required â€” get from https://app.enkryptai.com)
ENKRYPT_API_KEY=your-enkrypt-api-key

# Enkrypt AI Base URL (default: https://api.enkryptai.com)
ENKRYPT_BASE_URL=https://api.enkryptai.com

# Enkrypt AI Guardrail Policy Name (create at https://app.enkryptai.com)
ENKRYPT_GUARDRAIL_POLICY=your-policy-name

# Comma-separated list of detectors to block
# Available: injection_attack, toxicity, policy_violation, keyword_detector, nsfw, pii, bias
ENKRYPT_BLOCK_LIST=injection_attack,toxicity,policy_violation,nsfw

# =============================================================================
# Optional Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Guardrail checkpoints (true/false)
ENKRYPT_CHECK_PRE_LLM=true
ENKRYPT_CHECK_PRE_TOOL=true
ENKRYPT_CHECK_POST_TOOL=false
ENKRYPT_CHECK_POST_LLM=false
