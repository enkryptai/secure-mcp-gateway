{
    "enkrypt_api": {
        "url": "https://api.enkryptai.com/guardrails/policy/detect",
        "api_key": "YOUR_API_KEY_HERE",
        "ssl_verify": true,
        "timeout": 15,
        "fail_silently": true
    },
    "before_llm_call": {
        "enabled": true,
        "policy_name": "Sample Airline Guardrail",
        "block": [
            "policy_violation"
        ]
    },
    "after_llm_call": {
        "enabled": true,
        "policy_name": "Sample Airline Guardrail",
        "block": [
            "policy_violation"
        ]
    },
    "before_tool_call": {
        "enabled": true,
        "policy_name": "Sample Airline Guardrail",
        "block": [
            "policy_violation"
        ]
    },
    "after_tool_call": {
        "enabled": false,
        "policy_name": "Sample Airline Guardrail",
        "block": [
            "policy_violation"
        ]
    }
}